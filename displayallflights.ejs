<style>
  .maincontainer{
   background: #273c75;
   width: 100vw;
   height: 100vh;
   display: flex;
   justify-content: center;
   align-items: center;
  }
  .box
  { width:80%;
    height: auto; 
    background: #FFF;
    border-radius: 20px;
    padding: 15px;
    
 
  }
 .heading{
     font-size: 24px;
     letter-spacing: 1px;
     font-weight: bold;
     color:#273c75;  
     margin-bottom: 10px;
    
 }
 .daysstyle{
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
 
 }
 .buttonStyle{
    width: 100%;
 
 }
 </style>
 <html>
     <head>
         <title>Flight Interface</title>
         <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
   
       </head>
      
<body>
 <div class="maincontainer">
  <div class="box">
  <table class="table table-hover">
      <thead>
        <tr>
         
          <th scope="col">Flight Name</th>
          <th scope="col">Days/<br>Seats</th>
          <th scope="col">Source City</th>
          <th scope="col">Destination City</th>
          <th scope="col">Company</th>
          <th scope="col">Logo</th>
          <th scope="col">Edit/Delete</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% data.map((item)=>{%>
          <th scope="row">
              <%=item.flightname %>
              <br>
              <%=item.types %>
          </th>
          <td>
              Seats:<%=item.totalseats %>
              <br>
              <%=item.days %>
          </td>
          <td>
              <%=item.sourcecity %>
              <br>
              <%=item.departuretime %>

          </td>
          <td>
              <%=item.dsetinationcity %>
              <br>
              <%=item.arrivaltime %>


          </td>

          <td>
              <%=item.company %>
          </td>
          <td>
           <img src="/images/<%=item.logo %>" width='30'/>
          </td>
          <td>
              Edit/Delete
          </td>
        </tr>
     <% }) %>
        
      </tbody>
    </table>
</div>
</div>


</body>       

   
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>  
</html>